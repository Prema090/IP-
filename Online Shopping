<script> 
function switchSection(id) { 
const sections = document.querySelectorAll('section'); 
sections.forEach(sec => sec.classList.remove('active')); 
document.getElementById(id).classList.add('active'); 
} 
const cart = {}; 
function addToCart(product, price) { 
if (!cart[product]) { 
cart[product] = { quantity: 1, price: price }; 
} else { 
cart[product].quantity++; 
} 
updateCartDisplay(); 
switchSection('cart'); 
} 
function updateCartDisplay() { 
const cartItems = document.getElementById('cart-items'); 
const totalProducts = document.getElementById('total-products'); 
cartItems.innerHTML = ''; 
let total = 0; 
let count = 0; 
for (let item in cart) { 
const itemTotal = cart[item].quantity * cart[item].price; 
total += itemTotal; 
count++; 
cartItems.innerHTML += `<p><strong>${item}</strong> - $${cart[item].price} × ${cart[item].quantity} = $${itemTotal}</p>`; 
} 
document.getElementById('total').innerText = total; 
totalProducts.innerText = count; 
} 
</script> 
